<schemalist>
  <schema path="/com/expidus/shell/" id="com.expidus.shell">
    <key name="theme" type="s">
      <default>'Tokyo-dark'</default>
      <summary>Theme</summary>
      <description>
				Chooses which GTK + XFWM4 theme to utilize.
      </description>
    </key>
    <key name="wallpaper-path" type="s">
      <default>'/usr/share/backgrounds/expidus/default.png'</default>
      <summary>Wallpaper Path</summary>
      <description>
        The path to use when looking for wallpaper.
      </description>
    </key>
    <key name="favorite-applications" type="as">
      <default>['com.expidus.phone', 'com.expidus.contacts', 'com.expidus.settings']</default>
      <summary>Favorite Applications</summary>
      <description>
        List of favorited applications, will be pinned on the quick launcher.
      </description>
    </key>
		<key name="frameless-maximize" type="b">
			<default>true</default>
			<summary>Frameless Maximize</summary>
			<description>
				Remove window frames when maximized.
			</description>
		</key>
		<key name="scale-factor" type="d">
			<default>1</default>
			<summary>Scale Factor</summary>
			<description>
				The amount to scale by.
			</description>
		</key>
  </schema>
</schemalist>
